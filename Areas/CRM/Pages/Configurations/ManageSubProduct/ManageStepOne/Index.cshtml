    function editStepOne(ColorId) {
        console.log(ColorId);
        $.ajax({
            type: "GET",
            beforeSend: function (xhr) {
                xhr.setRequestHeader("XSRF-TOKEN",
                    $('input:hidden[name="__RequestVerificationToken"]').val());
            }
            ,
            url: "/CRM/Configurations/ManageSubProduct/ManageStepOne/Index?handler=SingleStepOneForEdit",

            data: { "ColorId": ColorId },
            contentType: "application/json",
            dataType: "json",
            success: function (response) {
               
                document.getElementById("ColorHiddenId").value = response.ColorId
                document.getElementById("ColorTLARId").value = response.ColorTLAR
                document.getElementById("ColorTLENId").value = response.ColorTLEN
               

                $('#showEditModal').modal('show');


            },

            failure: function (response) {
                alert(response);
            }
        });
    }


    function ShowViewPopUp(ColorId) {

        $.ajax({
            type: "GET",
            url: "/CRM/Configurations/ManageSubProduct/ManageStepOne/Index?handler=SingleStepOneForView",
            data: { "ColorId": ColorId },
            contentType: "application/json",
            dataType: "json",
            success: function (response) {
                document.getElementById("DColorTLARId").innerHTML = response.ColorTLAR
                document.getElementById("DColorTLENId").innerHTML = response.ColorTLEN

              
              

                $('#QuickViewPoup').modal('show');

            },
            failure: function (response) {
                alert(response);
            }
        });

    }
    function deleteCatagory(CategoryId) {


        $.ajax({
            type: "GET",
            url: "/CRM/Configurations/ManageCatagory/Index?handler=SingleCategoryForDelete",
            data: { "CategoryId": CategoryId },
            contentType: "application/json",
            dataType: "json",
            success: function (response) {
                console.log("Enter In Catagory")
                document.getElementById("DeleteCategoryId").value = response.CategoryId
                console.log("After In Catagory")
                $('#deleteRecordModal').modal('show');


            },
            failure: function (response) {
                alert(response);
            }
        });
    }






</script>      