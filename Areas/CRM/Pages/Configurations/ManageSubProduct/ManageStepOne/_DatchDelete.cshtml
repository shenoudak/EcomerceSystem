@{
}
@model Jovera.Models.Color

<div class="modal fade zoomIn" id="deleteRecordModal" tabindex="-1"
     aria-labelledby="deleteRecordLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="btn-close" data-bs-dismiss="modal"
                        aria-label="Close" id="btn-close"></button>
            </div>
            <div class="modal-body p-5 text-center">
                <lord-icon src="https://cdn.lordicon.com/gsqxdxog.json"
                           trigger="loop" colors="primary:#405189,secondary:#f06548"
                           style="width:90px;height:90px"></lord-icon>
                <div class="mt-4 text-center">


                    <h4 class="fs-semibold">@sharedResource["You are about to delete This Step One ?"]</h4>
                    <p class="text-muted fs-14 mb-4 pt-1">
                        @sharedResource["Deleting it Step will remove all of its information from its database."]
                    </p>
                    <div class="hstack gap-2 justify-content-center remove">
                        <button class="btn btn-link link-success fw-medium text-decoration-none" id="deleteRecord-close"
                                data-bs-dismiss="modal">
                            @sharedResource["Close"]
                        </button>
                        <form asp-area="CRM" asp-page="/Configurations/ManageSubProduct/ManageStepOne/Index" asp-page-handler="DeleteStepOne" enctype="multipart/form-data">

                            <input asp-for="@Model.ColorId" id="DeleteColorId" hidden>
                            
                            <button class="btn btn-danger" type="submit" id="delete-record">
                                @sharedResource["Yes,"]
                                @sharedResource["Delete It!!"]
                            </button>

                        </form>
                    </div>
                </div>

            </div>


        </div>
    </div>
</div>
