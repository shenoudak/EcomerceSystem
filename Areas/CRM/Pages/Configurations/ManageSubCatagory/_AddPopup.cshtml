@{
}
@model Jovera.Models.SubCategory

<div class="modal fade" id="AddModal" tabindex="-1" aria-labelledby="AddModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">

            <div class="modal-header bg-light p-3">
                <h5 class="modal-title" id="exampleModalLabel">@sharedResource["Add SubCatagory"]</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close" id="close-modal"></button>
            </div>

            <form asp-area="CRM" asp-page="/Configurations/ManageSubCatagory/Index" asp-page-handler="AddSubCategory" enctype="multipart/form-data" onsubmit="return validateMyForm();">
                <div class="modal-body">
                    <input type="hidden" id="id-field" />
                    <div class="row g-3">
                        <input type="text" asp-for="@Model.CategoryId" hidden value="@Model.CategoryId" />

                        <div class="col-lg-6">
                            <div>
                                <label asp-for="@Model.SubCategoryTLAR" class="form-label">@sharedResource["Arabic Title"]</label>

                                <input type="text" asp-for="@Model.SubCategoryTLAR" class="form-control" placeholder="@sharedResource["Enter Arabic Title"]" required />

                                <span asp-validation-for="@Model.SubCategoryTLAR" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div>
                                <label for="@Model.SubCategoryTLEN" class="form-label">@sharedResource["English Title"]</label>
                                <input type="text" asp-for="@Model.SubCategoryTLEN" class="form-control" placeholder="@sharedResource["Enter English Title"]" required />
                                <span asp-validation-for="@Model.SubCategoryTLEN" class="text-danger"></span>
                            </div>
                        </div>
                       
                        <div class="col-lg-12">
                            <div>
                                <label for="@Model.OrderIndex" class="form-label">@sharedResource["Sort Index"]</label>
                                <input type="number" min="1" asp-for="@Model.OrderIndex" id="company_name-field" class="form-control" placeholder="@sharedResource["Enter SubCategory Sort Index"]" required />
                                <span asp-validation-for="@Model.OrderIndex" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div class="form-check">
                                <input asp-for="@Model.IsActive" class="form-check-input" type="checkbox" id="default">
                                <label for="@Model.IsActive" class="form-check-label">@sharedResource["Active"]</label>
                                <span asp-validation-for="@Model.IsActive" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <!--end row-->
                </div>
         
                <div class="modal-footer">
                    <div class="hstack gap-2 justify-content-end">
                        <button type="button" class="btn btn-light" data-bs-dismiss="modal">@sharedResource["Close"]</button>
                        <button class="btn btn-success" id="add-btn">@sharedResource["Add SubCatagory"]</button>
                    </div>
                </div>
            </form>

        </div>
    </div>
</div>