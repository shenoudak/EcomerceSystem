@page
@model Jovera.Areas.CRM.Pages.Configurations.ManageStore.IndexModel
@Html.AntiForgeryToken()
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Xsrf
@{
    Layout = "_Layout";
}
<!--datatable css-->
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.1/css/dataTables.bootstrap5.min.css" />
<!--datatable responsive css-->
<link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.2.9/css/responsive.bootstrap.min.css" />
<link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.2.2/css/buttons.dataTables.min.css">
<style>
    .dataTables_filter {
        display: none;
    }

</style>
<div class="row">
    <div class="col-lg-12">
        <div class="card" id="orderList">
            

            <div class="card-body pt-0">
                <div>
                 

                    <div class="table-responsive table-card mb-1">
                        <table class="table table-nowrap align-middle" id="orderTable">
                            <thead class="text-muted table-light">
                                <tr class="text-uppercase">

                                   
                                    <th class="sort" data-sort="product_name"> @sharedResource["Trade Name"]</th>
                                    <th class="sort" data-sort="date"> @sharedResource["Responsible Name For Supply"]</th>
                                    <th class="sort" data-sort="amount"> @sharedResource["Address"]</th>
                                    <th class="sort" data-sort="payment"> @sharedResource["Phone 1"]</th>
                                    <th class="sort" data-sort="status">@sharedResource["Profile Status"]</th>
                                    <th class="sort" data-sort="city">@sharedResource["Actions"]</th>
                                </tr>
                            </thead>
                            <tbody class="list form-check-all">
                                @foreach (var item in @Model.StoreList)
                                {
                                    <tr>


                                       
                                        <td class="product_name">@item.TradeName</td>
                                        <td class="date">
                                            @item.ResponsibleForSupply


                                        </td>
                                        <td class="amount">@item.Address</td>
                                        <td class="payment">@item.Phone1</td>
                                        <td class="status">
                                            @if (@item.StoreProfileStatusId == 1)
                                            {
                                                if (Model.BrowserCulture == "en-US")
                                                {
                                                    <span class="badge badge-soft-danger text-uppercase">@item.StoreProfileStatus.StatusEnglishTitle</span>

                                                }
                                                else
                                                {
                                                    <span class="badge badge-soft-danger text-uppercase">@item.StoreProfileStatus.StatusArabicTitle</span>

                                                }

                                            }
                                            else if (@item.StoreProfileStatusId == 2)
                                            {
                                                 if (Model.BrowserCulture == "en-US")
                                                {
                                                    <span class="badge badge-soft-primary text-uppercase">@item.StoreProfileStatus.StatusEnglishTitle</span>

                                                }
                                                else
                                                {
                                                    <span class="badge badge-soft-primary text-uppercase">@item.StoreProfileStatus.StatusArabicTitle</span>

                                                }

                                            }
                                            else if (@item.StoreProfileStatusId == 3)
                                            {
                                                if (Model.BrowserCulture == "en-US")
                                                {
                                                    <span class="badge badge-soft-success text-uppercase">@item.StoreProfileStatus.StatusEnglishTitle</span>

                                                }
                                                else
                                                {
                                                    <span class="badge badge-soft-success text-uppercase">@item.StoreProfileStatus.StatusArabicTitle</span>

                                                }

                                            }
                                            else
                                            {
                                                if (Model.BrowserCulture == "en-US")
                                                {
                                                    <span class="badge badge-soft-warning text-uppercase">@item.StoreProfileStatus.StatusEnglishTitle</span>

                                                }
                                                else
                                                {
                                                    <span class="badge badge-soft-warning text-uppercase">@item.StoreProfileStatus.StatusArabicTitle</span>

                                                }

                                            }
                                        </td>
                                        <td>
                                            <ul class="list-inline hstack gap-2 mb-0">
                                                <li class="list-inline-item" data-bs-toggle="tooltip"
                                                    data-bs-trigger="hover" data-bs-placement="top"
                                                    title="View">
                                                    <a asp-area="CRM" asp-page="../ManageStore/Profile/ProfileDetails" asp-route-vendorId="@item.StoreId" class="text-primary d-inline-block">
                                                        <i class="ri-eye-fill fs-16"></i>
                                                    </a>
                                                </li>
                                                <li class="list-inline-item edit"
                                                    data-bs-toggle="tooltip" data-bs-trigger="hover"
                                                    data-bs-placement="top" title="Edit">
                                                    <a asp-area="CRM" asp-page="../ManageStore/Profile/index" asp-route-vendorId="@item.StoreId"
                                                       class="text-primary d-inline-block edit-item-btn">
                                                        <i class="ri-pencil-fill fs-16"></i>
                                                    </a>
                                                </li>
                                                <li class="list-inline-item">

                                                    <a class="btn btn-success btn-sm" asp-page="../ManageItem/index" asp-route-vendorId="@item.StoreId">
                                                        @sharedResource["Added Products"]

                                                    </a>
                                                </li>
                                          
                                            </ul>
                                        </td>
                                    </tr>
                                }

                            </tbody>
                        </table>

                    </div>
                    <div class="d-flex justify-content-end">
                        <div class="pagination-wrap hstack gap-2">
                            <a class="page-item pagination-prev disabled" href="#">
                                Previous
                            </a>
                            <ul class="pagination listjs-pagination mb-0"></ul>
                            <a class="page-item pagination-next" href="#">
                                Next
                            </a>
                        </div>
                    </div>
                </div>


            </div>
        </div>

    </div>
    <!--end col-->
</div>


<partial name="_DatchDelete" model="@Model.store" view-data="ViewData" />

<!--datatable js-->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
<script src="https://cdn.datatables.net/responsive/2.2.9/js/dataTables.responsive.min.js"></script>
<script src="https://cdn.datatables.net/buttons/2.2.2/js/dataTables.buttons.min.js"></script>
<script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.print.min.js"></script>
<script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.html5.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
@section scripts{
    <!-- list.js min js -->
    <script src="~/assets/libs/list.js/list.min.js"></script>
    <script src="~/assets/libs/list.pagination.js/list.pagination.min.js"></script>
    <!-- crm leads init -->
    <script src="~/assets/js/pages/crm-leads.init.js"></script>
}






