@using Jovera.Data
@inject CRMDBContext _context
@{
    var Categories = _context.MiniSubCategories.Select(e => new { e.MiniSubCategoryId, e.MiniSubCategoryTLAR, e.MiniSubCategoryTLEN });
    var locale = Context.Request.HttpContext.Features.Get<IRequestCultureFeature>();
    var BrowserCulture = locale.RequestCulture.UICulture.ToString();
}
@model Jovera.Models.Item

<div class="modal fade" id="showEditModal" tabindex="-1"
     aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered">
        <div class="modal-content">
            <div class="modal-header bg-light p-3">
                <h5 class="modal-title" id="exampleModalLabel" >@sharedResource["Edit Product"]</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal"
                        aria-label="Close" id="close-modal"></button>
            </div>
            <form asp-area="CRM" asp-page="/Configurations/ManageItem/Index" asp-page-handler="EditItem" enctype="multipart/form-data" onsubmit="return validateMyForm();">
                <div class="modal-body">
                    <input type="hidden" id="id-field" />
                    <div class="row g-3">
                        <input asp-for="@Model.ItemId" id="HiddenId" value="@Model.ItemId" hidden>
                        <input asp-for="@Model.ItemImage" id="PicHiddenId" hidden>
                        <div class="col-lg-12">
                            <div class="text-center col-lg-12">
                                <div class="position-relative d-inline-block">
                                    <div class="position-absolute bottom-0 end-0">
                                        <label for="file" class="mb-0" data-bs-toggle="tooltip" data-bs-placement="right" title=@sharedResource["Select Image"]>
                                            <div class="avatar-xs cursor-pointer">
                                                <div class="avatar-title bg-light border rounded-circle text-muted">
                                                    <i class="ri-image-fill"></i>
                                                </div>
                                            </div>
                                        </label>
                                        <input class="form-control d-none" name="Newfile" id="file" type="file"
                                               accept="image/*">
                                    </div>
                                    <div class="avatar-lg p-1">
                                        <div class="avatar-title bg-light rounded-circle">
                                            <img src="~/assets/images/users/user-dummy-img.jpg" id="lead-img" class="avatar-md rounded-circle object-cover removeFromHere itemImgCla" />
                                        </div>
                                    </div>
                                </div>
                                <h5 class="fs-13 mt-3">@sharedResource["Image"] </h5>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div>
                                <label asp-for="@Model.ItemTitleAr" class="form-label">@(sharedResource["Arabic Title"])</label>

                                <input type="text" id="ItemTLARId" asp-for="@Model.ItemTitleAr" class="form-control" placeholder="@sharedResource["Enter Arabic Title"]" required />

                                <span asp-validation-for="@Model.ItemTitleAr" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div>
                                <label for="@Model.ItemTitleEn" class="form-label">@sharedResource["English Title"]</label>
                                <input type="text" id="ItemTLENId" asp-for="@Model.ItemTitleEn" class="form-control" placeholder="@sharedResource["Enter English Title"]" required />
                                <span asp-validation-for="@Model.ItemTitleEn" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div>
                                <label for="@Model.ItemPrice" class="form-label">@sharedResource["Price"]</label>
                                <input id="ItemPriceId" type="number" min="1" asp-for="@Model.ItemPrice" id="company_name-field" class="form-control" placeholder="@sharedResource["Enter Product Price"]" required />
                                <span asp-validation-for="@Model.ItemPrice" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div>
                                <label for="@Model.OrderIndex" class="form-label">@sharedResource["Sort Index"]</label>
                                <input id="OrderIndexId" type="number" min="1" asp-for="@Model.OrderIndex" id="company_name-field" class="form-control" placeholder="@sharedResource["Enter Sort Index"]" required />
                                <span asp-validation-for="@Model.OrderIndex" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-12">
                            <div>
                                <label for="@Model.ItemDescriptionAr" class="form-label">@sharedResource["Arabic Description"]</label>
                                <textarea  id="ItemDescriptionId"  asp-for="@Model.ItemDescriptionAr" class="form-control" placeholder="@sharedResource["Enter Arabic Description"]"></textarea>
                                <span asp-validation-for="@Model.ItemDescriptionAr" class="text-danger"></span>
                            </div>
                        </div>


                        <div class="col-lg-12">
                            <div>
                                <label for="@Model.ItemDescriptionEn" class="form-label">@sharedResource["English Description"]</label>
                                <textarea  id="EItemDescriptionId" asp-for="@Model.ItemDescriptionEn" class="form-control" placeholder="@sharedResource["Enter English Description"]"></textarea>
                                <span asp-validation-for="@Model.ItemDescriptionEn" class="text-danger"></span>
                            </div>
                        </div>

                        <div class="col-lg-6">
                            <label asp-for="@Model.MiniSubCategoryId" for="car-rental-name">@sharedResource["Category"] <small class="text-danger">*</small></label>

                            <select data-val="true" data-val-required="@sharedResource["Please choose a Catagory"]" id="editcatId" asp-for="@Model.MiniSubCategoryId" class="form-select required" aria-label="Default select example" required>
                                <option selected value="Select Type">@sharedResource["Select Category"]</option>

                                @{
                                    if (@Categories != null)
                                    {
                                        foreach (var item in @Categories)

                                        {
                                            if (BrowserCulture == "en-US")
                                            {

                                                <option value="@item.MiniSubCategoryId">@item.MiniSubCategoryTLEN</option>
                                            }
                                            else
                                            {
                                                <option value="@item.MiniSubCategoryId">@item.MiniSubCategoryTLAR</option>

                                            }
                                        }
                                    }
                                }

                            </select>

                            <span asp-validation-for="@Model.MiniSubCategoryId" class="text-alert"></span>
                        </div>
                        <div class="col-lg-6">
                            <div>
                                <label for="@Model.VideoUrl" class="form-label">@sharedResource["Video Url"]</label>
                                <input id="VideoUrlId" type="url" asp-for="@Model.VideoUrl" id="company_name-field" class="form-control" placeholder="@sharedResource["Enter Video URL"]" />
                                <span asp-validation-for="@Model.VideoUrl" class="text-danger"></span>
                            </div>
                        </div>


                        <div class="col-md-12 form-group">
                            <label for="formFile" class="form-label">@sharedResource["Adding Others Images For Item"]</label>
                            <input class="form-control" multiple name="Editfilepond" type="file">
                        </div>
                        <div class="col-lg-6">
                            <div class="form-check">
                                <input asp-for="@Model.IsActive" class="form-check-input" id="IsActiveId" type="checkbox">
                                <label for="@Model.IsActive" class="form-check-label">@sharedResource["Active"]</label>
                                <span asp-validation-for="@Model.IsActive" class="text-danger"></span>
                            </div>
                        </div>
                        <div class="col-lg-6">
                            <div class="form-check">
                                <input asp-for="@Model.HasSubProduct" class="form-check-input" id="HasSubProductId" type="checkbox">
                                <label for="@Model.HasSubProduct" class="form-check-label">@sharedResource["Has SubProduct"]</label>
                                <span asp-validation-for="@Model.HasSubProduct" class="text-danger"></span>
                            </div>
                        </div>
                    </div>
                    <div class="row  mt-2"  id="images_container">
                        <div class="col-12">
                            <h3 class="mx-2"> @sharedResource["Item Images"] </h3>
                            <hr />
                            <div id="item_images" class="d-flex justify-content-center align-items-center" style="flex-wrap:wrap">
                                <div class="loader">@sharedResource["Loading..."]</div>
                                <div class="message d-none">@sharedResource["No Images"]  </div>
                            </div>
                        </div>

                    </div>
                    <!--end row-->
                </div>

                <div class="modal-footer">
                    <div class="hstack gap-2 justify-content-end">
                        <button type="button" class="btn btn-light" data-bs-dismiss="modal">@sharedResource["Close"]</button>
                        <button class="btn btn-success" id="add-btn">@sharedResource["Edit Product"]</button>
                    </div>
                </div>
            </form>

           
        </div>
    </div>
</div>