@page
@model Jovera.Areas.CRM.Pages.Configurations.ManageCatagory.IndexModel
@Html.AntiForgeryToken()
@inject Microsoft.AspNetCore.Antiforgery.IAntiforgery Xsrf
@{
    Layout = "_Layout";
}
<!--datatable css-->
<link rel="stylesheet" href="https://cdn.datatables.net/1.13.1/css/dataTables.bootstrap5.min.css" />
<!--datatable responsive css-->
<link rel="stylesheet" href="https://cdn.datatables.net/responsive/2.2.9/css/responsive.bootstrap.min.css" />
<link rel="stylesheet" href="https://cdn.datatables.net/buttons/2.2.2/css/buttons.dataTables.min.css">
<style>
    .dataTables_filter {
        display: none;
    }
</style>


<div class="row">
    <div class="col-lg-12">
        <div class="card" id="List">
            <div class="card-header border-0">
                <input type="text" asp-for="@Model.url" value="@Model.url" hidden id="UrlId" />

                <div class="row g-4 align-items-center">
                   
                    <div class="col-sm-auto ms-auto">
                        <div class="hstack gap-2">

                            <button type="button" class="btn btn-success add-btn"
                                    data-bs-toggle="modal" id="create-btn"
                                    data-bs-target="#AddModal">
                                <i class="ri-add-line align-bottom me-1"></i> @sharedResource["Add Catagory"]
                            </button>

                        </div>
                    </div>
                </div>
            </div>
            <div class="card-body">
                <div>
                    <div class="table-responsive table-card">
                        <table id="myTable" class="table  dt-responsive nowrap  align-middle" style="width:100%">
                            <thead class="table-light">
                                <tr>
                                    <th data-ordering="false">@sharedResource["Image"]</th>
                                    <th data-ordering="false">@sharedResource["Arabic Title"]</th>
                                    <th data-ordering="false">@sharedResource["English Title"]</th>
                                    <th data-ordering="false">@sharedResource["Sort Index"]</th>
                                    <th data-ordering="false">@sharedResource["Is Active?"]</th>
                                    <th data-ordering="false">@sharedResource["Actions"]</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                <tbody class="list form-check-all">
                                        @{
                                            foreach (var item in Model.categoriesList)
                                            {
                                            <tr>

                                                <td>
                                                    <div class="d-flex align-items-center">
                                                        <div class="flex-shrink-0">
                                                            <img src="~/@item.CategoryPic" alt=""
                                                                 class="avatar-xxs rounded-circle image_src object-cover">
                                                        </div>
                                                    </div>
                                                </td>
                                                <td class="company_name">@item.CategoryTLAR</td>
                                                <td class="leads_score">@item.CategoryTLEN</td>
                                                <td class="phone">@item.OrderIndex</td>
                                                <td class="location">@item.IsActive</td>


                                                <td>
                                                    <ul class="list-inline hstack gap-2 mb-0">


                                                        <li class="list-inline-item" data-bs-toggle="tooltip"
                                                            data-bs-trigger="hover" data-bs-placement="top"
                                                            title=@sharedResource["View"]>
                                                            <a href="javascript:void(0)" data-bs-toggle="modal">
                                                                <i class="ri-eye-fill align-bottom text-muted" onclick="ShowViewPopUp(@item.CategoryId)"></i>
                                                            </a>
                                                        </li>
                                                        <li class="list-inline-item" data-bs-toggle="tooltip"
                                                            data-bs-trigger="hover" data-bs-placement="top"
                                                            title=@sharedResource["Edit"]>
                                                            <a class="edit-item-btn" href="javascript:void(0)"
                                                               data-bs-toggle="modal">
                                                                <i class="ri-pencil-fill align-bottom text-muted" onclick="editButtonClick(@item.CategoryId)"></i>
                                                            </a>
                                                        </li>
                                                        <li class="list-inline-item" data-bs-toggle="tooltip"
                                                            data-bs-trigger="hover" data-bs-placement="top"
                                                            title=@sharedResource["Delete"]>
                                                            <a class="remove-item-btn" data-bs-toggle="modal"
                                                               href="javascript:void(0)">
                                                                <i class="ri-delete-bin-fill align-bottom text-muted" onclick="deleteCatagory(@item.CategoryId)"></i>
                                                            </a>
                                                        </li>
                                                        <li class="list-inline-item">
                                                            @*<a class="btn btn-success" asp-page="../ManageSubCatagory/index">*@
                                                            <a class="btn btn-success btn-sm" asp-page="../ManageSubCatagory/index" asp-route-CatagoryId="@item.CategoryId">
                                                                    @sharedResource["SubCatagories"]
                                                               
                                                            </a>
                                                        </li>
                                                    </ul>
                                                </td>


                                            </tr>
                                            }
                                        }

                                </tbody>
                                }
                           
                        </table>
                    </div>

                </div>

            </div>

            <!--end modal-->
        </div>
    </div>
    <!--end col-->
</div>

<partial name="_AddPopup" model="@Model.category" view-data="ViewData" />
<partial name="_ViewPopup" model="@Model.category" view-data="ViewData" />
<partial name="_EditPopup" model="@Model.category" view-data="ViewData" />
<partial name="_DatchDelete" model="@Model.category" view-data="ViewData" />

<!--datatable js-->
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.11.5/js/dataTables.bootstrap5.min.js"></script>
<script src="https://cdn.datatables.net/responsive/2.2.9/js/dataTables.responsive.min.js"></script>
<script src="https://cdn.datatables.net/buttons/2.2.2/js/dataTables.buttons.min.js"></script>
<script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.print.min.js"></script>
<script src="https://cdn.datatables.net/buttons/2.2.2/js/buttons.html5.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/vfs_fonts.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/pdfmake/0.1.53/pdfmake.min.js"></script>
<script src="https://cdnjs.cloudflare.com/ajax/libs/jszip/3.1.3/jszip.min.js"></script>
@section scripts{
    <!-- list.js min js -->
    <script src="~/assets/libs/list.js/list.min.js"></script>
    <script src="~/assets/libs/list.pagination.js/list.pagination.min.js"></script>
    <!-- crm leads init -->
    <script src="~/assets/js/pages/crm-leads.init.js"></script>
}


<script>
   
   



        function validateMyForm() {


            if (document.getElementById("file").files.length == 0) {
                alert("You Must Select Image");
                return false;
            }
            return true;
        }

        function editButtonClick(CategoryId) {
            console.log(CategoryId);
            $.ajax({
                type: "GET",
                beforeSend: function (xhr) {
                    xhr.setRequestHeader("XSRF-TOKEN",
                        $('input:hidden[name="__RequestVerificationToken"]').val());
                }
                ,
                url: "/CRM/Configurations/ManageCatagory/Index?handler=SingleCategoryForEdit",

                data: { "CategoryId": CategoryId },
                contentType: "application/json",
                dataType: "json",
                success: function (response) {
                    document.getElementsByClassName('categoryImgCla')[0].src = "/" + response.CategoryPic
                    document.getElementById("CategoryHiddenId").value = response.CategoryId
                    document.getElementById("CategoryPicHiddenId").value = response.CategoryPic
                    document.getElementById("CategoryTLARId").value = response.CategoryTLAR
                    document.getElementById("CategoryTLENId").value = response.CategoryTLEN
                    document.getElementById("IsActiveId").checked= response.IsActive
                    document.getElementById("SortOrderId").value = response.OrderIndex


                    $('#showEditModal').modal('show');


                },

                failure: function (response) {
                    alert(response);
                }
            });
        }


    function ShowViewPopUp(CategoryId) {
         
            $.ajax({
                type: "GET",
                url: "/CRM/Configurations/ManageCatagory/Index?handler=SingleCategoryForView",
                data: { "CategoryId": CategoryId },
                contentType: "application/json",
                dataType: "json",
                success: function (response) {
                
                        document.getElementById("DCategoryPicId").src = "/" + response.CategoryPic
                    document.getElementById("DCategoryTLARId").innerHTML = response.CategoryTLAR
                    document.getElementById("DCategoryTLENId").innerHTML = response.CategoryTLEN
                
                    document.getElementById("DSortOrderId").innerHTML = response.OrderIndex
                    document.getElementById("DIsActiveId").innerHTML = response.IsActive
                        if (response.IsActive == true) {
                        document.getElementById("DIsActiveId").innerHTML = "Active"

                    }
                    else {
                        document.getElementById("DIsActiveId").innerHTML = "Not Active"
                    }

                    $('#QuickViewPoup').modal('show');

                },
                failure: function (response) {
                    alert(response);
                }
            });

        }
    function deleteCatagory(CategoryId) {


            $.ajax({
                type: "GET",
                    url: "/CRM/Configurations/ManageCatagory/Index?handler=SingleCategoryForDelete",
                data: { "CategoryId": CategoryId },
                contentType: "application/json",
                dataType: "json",
                success: function (response) {
                    console.log("Enter In Catagory")
                    document.getElementById("DeleteCategoryId").value = response.CategoryId
                    console.log("After In Catagory")
                    $('#deleteRecordModal').modal('show');


                },
                failure: function (response) {
                    alert(response);
                }
            });
        }



</script>      